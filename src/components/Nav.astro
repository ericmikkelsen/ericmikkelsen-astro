---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import shuffleArray from "../modules/shuffleArray";

const delays = shuffleArray(['0s','.05s','.1s']);
const currentDelay = '.275s';
const currentPath = Astro.url.pathname;
const links = [
    {
        text: "ericmikkelsen.com",
        url: "/",
        delay: '',
        current: false,
    },
    {
        text: "blog",
        url: "/blog/",
        delay: '',
        current: false,
    },
    {
        text: "resume",
        url: "/resume/",
        delay: '',
        current: false,
    },
    {
        text: "projects",
        url: "/projects/",
        delay: '',
        current: false,

    },
].map(link => {
    const current = link.url === currentPath;
    const relatedLink = current || currentPath.startsWith(link.url) && link.url !== '/'
    if(relatedLink) {
        link.delay = currentDelay
    } else {
        link.delay = delays[0]
        delays.shift();
    }
    link.current = current
    return link
});

---
<style>
    nav {
        margin: 5% 0 0;
        /* background: black; */
        padding: 0 5%;
        /* display: inline-block; */
        /* text-transform: uppercase; */
        font-weight: 700;
    }
    a {
        text-decoration: none;
        border-radius: 100rem;
        display: inline-block;
        margin-right: 5%;
        margin-bottom: 5%;
        transition-timing-function: ease-in-out;
        aspect-ratio: 1/1;
        outline: none;
        transform: rotate(30deg);
        -webkit-tap-highlight-color: rgba(0,0,0,0);
    }
    a:focus-visible > * {
        outline: 0.25em solid #fff;
        outline-offset: -0.5em;
    }
    a:active .link-target > * {
        transform: translateY(0.125em);
    }
    @keyframes fadeInAnimation {
        0% { transform: scale(0) }
        100% { transform: scale(1) }
    }
    .link-target {
        display: inline-block;
        min-width: 3em;
        text-align: center;
        background: #000;
        padding: 2.5vw;
        aspect-ratio: 1/1;
        vertical-align: middle;
        display: inline-flex;
        align-items: center;
        border-radius: 100rem;
        justify-content: center;
        text-decoration: none;
        color: #000;
        transform: scale(0);
        animation: fadeInAnimation ease .2s;
        animation-iteration-count: 1;
        animation-fill-mode: forwards;
        animation-timing-function: cubic-bezier(0.455, 0.03, 0.515, 0.955);
    }
    a:nth-child(1) .link-target {
        background-color: #be449d;
        animation-delay: var(--nav-1-delay, 0s);
    }
    a:nth-child(2) .link-target {
        background-color: #e40089;
        animation-delay: .15s;
        animation-delay: var(--nav-2-delay, .15s);
    }
    a:nth-child(3) .link-target {
        background-color: #e3220c;
        animation-delay: .05s;
        animation-delay: var(--nav-3-delay, .05s);
    }
    a:nth-child(4) .link-target {
        background-color: #d40;
        animation-delay: .1s;
        animation-delay: var(--nav-4-delay, .1s);
    }
    .link-target::before {
        content: "";
        display: block;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #fff;
        opacity: .9;
        border-radius: inherit;
        transform: scale(0.000001);
        z-index: -1;
        transition: 0.125s;
    }
    a:hover .link-target::before {
        transform: scale(.8);
    }
    .link-target span {
        border-bottom: 0.25em solid;
        line-height: 1.1;
        transition: 0.125s;
    }
</style>
<nav class="rounded-right">
    {
        links.map((link,index) => {
            const i = index + 1;
            return (
                <a href={link.url}>
                    <span aria-current={link.current ? 'page' : null} class="link-target" style={`--nav-${i}-delay:${link.delay}`}>
                        <span>{link.text}</span>
                    </span>
                </a>
            );
        })
    }
</nav>
