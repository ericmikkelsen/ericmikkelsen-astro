---
import BaseHead from '../components/BaseHead.astro';
import Nav from '../components/Nav.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const { title, description, heading, imageSrc = '',marquee} = Astro.props;


---
<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>
	<body>
		<Nav class:list={['NAV']}/>
		<main>
			<h1 class="rounded-right">
				<span>
					{marquee||title}
				</span>
			</h1>
			<div class="rounded-right">
				<slot></slot>
			</div>
			<img src={imageSrc || '/eric-looking-left.jpg'} alt="Eric in a green shirt looking at the h1 to the left">
		</main>
	</body>
</html>
<style>
	h1 {
		background: pink;
		padding: 5.555555555%;
		color: #000;
		word-break: break-all;
		width: 2ch;
		line-height: .775;
		margin: 0 5.555555555% 0 0;
		font-size: 10rem;
		text-shadow: .5rem .5rem 0 #Fff;
		text-transform: uppercase;
		position: relative;
		vertical-align: middle;
	}
	h1 span {
		position: relative;
		top: .05em;
		right: .025em;
		font-size: 1em;
		line-height: inherit;
		transform: scale(1.05);
		display: block;
	}
	img {
		width: 100%;
		z-index: -1;
		height: 100%;
		height: 100lvh;
		position: fixed;
		transform: translate3d(0,0,0);
		border-radius: none;
		top: 0;
		left: 0;
		object-fit: cover;
		object-position: 60%;
	}
	main {
		/* padding-top: 5%; */
		display: flex;
		flex-wrap: wrap;
	}
	main div {
		display: block;
		width: fit-content;
		background-color: #fff;
		padding: 5.555555555%;
		margin: 5.555555555% 0 0;
		max-width: 35em;
		width: 100%;
		box-sizing: border-box;
	}
	main div > * {f
		margin: 0;
	}
	main div > * + * {
		margin-top: calc(1em + .5rem);
	}
</style>
